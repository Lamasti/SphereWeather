<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#42413e"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="fr.gauthierperea.spherewheather.First"
    tools:showIn="@layout/activity_first">

    <Button
        android:id="@+id/btn_valid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valider"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="80dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/insert_ville"
        android:layout_marginRight="80dp" />

    <EditText
        android:id="@+id/insert_ville"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Ville"
        android:textColorHint="#929292"
        android:layout_marginLeft="54dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="54dp"
        android:layout_marginTop="69dp"
        app:layout_constraintTop_toBottomOf="@+id/insert_nom" />

    <EditText
        android:id="@+id/insert_nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="#FFFFFF"
        android:inputType="textPersonName"
        android:hint="Nom PrÃ©nom"
        android:textColorHint="#929292"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/insert_ville"
        android:layout_marginTop="140dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/insert_ville"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
